<%- include("partials/header.ejs") %> 
<%- include("partials/nav.ejs") %>

<body>
  <!-- linked to weather.js-->
  <script src="/js/weather.js"></script>
  <div class="container mt-4">
    <div class="jumbotron centered">
      <h1>All Events</h1>
    </div>

    <% if (!events || events.length === 0) { %>
      <p>No events listed.</p>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th>Event Title</th>
            <th>Date</th>
            <th>Time</th>
            <th>Location Name</th>
            <th>Guest Count</th>
            <th>Description</th>
            <th>AV Needed</th>
            <th>Setup Type</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { console.log(event.date);
            event.date = event.date.toISOString().substr(0, 10);%>
            <!-- Display each event in a table row -->
            <tr>
              <td><%= event.title %></td>
              <td><%= event.date %></td>
              <td><%= event.time %></td>
              <td><%= event.location_name %></td>
              <td><%= event.guest_count %></td>
              <td><%= event.description %></td>
              <td><%= event.av_needed ? "Yes" : "No" %></td>
              <td><%= event.setup_type %></td>
              <td class="text-end">
                <!-- Need to fix this to work with the database -->
                <% if (event.host_id === current_user_id) { %>
                  <a href="/events/<%= event.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                <% } %>
              </td>
            </tr>
            <tr>
              <!-- Weather column -->
              <td colspan="2">
                <div id="weather-<%= event.id %>">Loading weather...</div>
                <script>
                  getWeather("<%= event.location_city %>", "<%= event.date %>", "weather-<%= event.id %>");
                </script>
              </td>
            
              <!-- Map column -->
              <td colspan="2">
                <div id="map-<%= event.id %>" 
                     data-map-address="<%= event.location_city %>, <%= event.location_state %>" 
                     style="height: 300px; width: 100%;">
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
  <script src="/js/map.js"></script>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyARgxfR2ksTBiPUR4fOZetdiaa4nWxKvvw&callback=initMap">
  </script>
</body>
